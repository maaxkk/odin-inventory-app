extends ../layout

block content

    h1 #{title}: #{author.full_name}

    if author_ads.length

        p #[strong Delete the following ads before attempting to delete this author.]
        div(style='margin-left:20px;margin-top:20px')
            h4 Ads
            dl
                each ad in author_ads
                    dt
                        a(href=ad.url) #{ad.title}
                    dd #{ad.description}

    else
        p Do you really want to delete this Author?

        form(method='POST')
            div.form-group
                input#authorid.form-control(type='hidden', name='authorid', value=author._id )

            button.btn.btn-primary(type='submit') Delete
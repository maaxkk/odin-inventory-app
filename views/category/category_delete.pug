extends ../layout

block content
    h1= title
    p= category.name
    if ads_in_category.length
        p #[strong Delete the following ads before attempting to delete this category.]
            div(style='margin-left:20px;margin-top:20px')
                h4 Ads
                dl
                    each ad in ads_in_category
                        dt
                            a(href=ad.url) #{ad.title}
                        dd #{ad.description}
    else
        p Do you really want to delete this Category?

        form(method='POST')
            div.form-group
                input#authorid.form-control(type='hidden', name='categoryid', value=category._id )

            button.btn.btn-primary(type='submit') Delete